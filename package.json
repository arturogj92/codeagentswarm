{
  "name": "codeagentswarm",
  "version": "0.0.1",
  "description": "Claude Code Terminal Manager - Multiple terminal quadrants for Claude Code",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "ENABLE_DEBUG_LOGS=true electron . --dev",
    "build": "export PYTHON=/opt/homebrew/bin/python3.11 && electron-builder --publish=never",
    "build:debug": "./build-debug.sh",
    "build:debug:clean": "rm -f debug-config.json",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "@sentry/electron": "^6.8.0",
    "better-sqlite3": "^8.7.0",
    "body-parser": "^1.20.2",
    "electron-log": "^5.4.1",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "node-pty": "^1.0.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "build": {
    "appId": "com.codeagentswarm.app",
    "productName": "CodeAgentSwarm",
    "generateUpdatesFilesForAllChannels": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!tests/**/*",
      "!test-*.js",
      "!test-*.sh",
      "!*.test.js",
      "!*.bak",
      "!*.db",
      "!*.db-journal",
      "!dist/**/*",
      "!.git/**/*",
      "!.github/**/*",
      "!.idea/**/*",
      "!docs/**/*",
      "!scripts/**/*",
      "!*.log",
      "!.DS_Store"
    ],
    "extraResources": [
      "app-update.yml"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "logo_prod_512.png",
      "target": [
        {
          "target": "dmg"
        },
        {
          "target": "zip"
        }
      ],
      "artifactName": "${productName}-${version}-darwin-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": false,
      "electronUpdaterCompatibility": ">=2.16"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-darwin-${arch}.${ext}",
      "writeUpdateInfo": false,
      "title": "Install CodeAgentSwarm",
      "contents": [
        {
          "x": 180,
          "y": 170,
          "type": "file"
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 660,
        "height": 400
      },
      "backgroundColor": "#0d0d0d"
    },
    "afterSign": "scripts/notarize.js",
    "win": {
      "icon": "logo_prod_512.png"
    },
    "linux": {
      "icon": "logo_prod_512.png"
    },
    "publish": null
  }
}
