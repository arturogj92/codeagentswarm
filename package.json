{
  "name": "codeagentswarm",
  "version": "0.0.1",
  "description": "Claude Code Terminal Manager - Multiple terminal quadrants for Claude Code",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "ENABLE_DEBUG_LOGS=true electron . --dev",
    "build": "export PYTHON=/opt/homebrew/bin/python3.11 && electron-builder",
    "build:debug": "./build-debug.sh",
    "build:debug:clean": "rm -f debug-config.json",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "@sentry/electron": "^6.8.0",
    "better-sqlite3": "^8.7.0",
    "body-parser": "^1.20.2",
    "electron-log": "^5.4.1",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "node-pty": "^1.0.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-web-links": "^0.9.0"
  },
  "build": {
    "appId": "com.codeagentswarm.app",
    "productName": "CodeAgentSwarm",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "database.js",
      "database-mcp.js",
      "database-mcp-standalone.js",
      "mcp-server.js",
      "mcp-client.js",
      "mcp-stdio-server.js",
      "mcp-launcher.sh",
      "claude-md-config.js",
      "hooks-manager.js",
      "webhook-server.js",
      "git-service.js",
      "deepseek-commit-service.js",
      "hook-sender.sh",
      "hook-wrapper.sh",
      "test-hooks.js",
      "kanban.html",
      "kanban.js",
      "kanban.css",
      "logger.js",
      "log-viewer.js",
      "child-process-logger.js",
      "package.json",
      "logo_prod.png",
      "logo_prod_512.png",
      "node_modules/**/*",
      "debug-config.json",
      "build-debug.sh",
      "services/**/*"
    ],
    "extraResources": [],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "logo_prod_512.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName}-${version}-darwin-${arch}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-darwin-${arch}.${ext}"
    },
    "afterSign": "scripts/notarize.js",
    "win": {
      "icon": "logo_prod_512.png"
    },
    "linux": {
      "icon": "logo_prod_512.png"
    },
    "publish": {
      "provider": "generic",
      "url": "https://codeagentswarm-backend.up.railway.app/update"
    }
  }
}
